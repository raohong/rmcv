{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": false,
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "rmc-vant": ["packages/components/src/index.tsx"],
      "@rmc-vant/icons": ["packages/icons/src/index.tsx"],
      "@rmc-vant/utils": ["packages/utils/src/index.tsx"],
      "@rmc-vant/hooks": ["packages/hooks/src/index.tsx"]
    }
  },
  "include": [
    "packages/**/*",
    "src/**/*",
    "docs/**/*",
    "demos/**/*",
    "style/**/*",
    "tests/**/*",
    "__test__/**/*",
    "typings/**/*",
    "config/**/*",
    ".eslintrc.js",
    ".stylelintrc",
    ".prettierrc.js",
    "jest.config.js",
    "setupTests.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    ".umi",
    "jest",
    "lib",
    "es"
  ]
}
