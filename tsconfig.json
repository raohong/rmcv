{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./",
    "module": "ESNext",
    "paths": {
      "rmc-vant": ["packages/components/src/index.tsx"],
      "@rmc-vant/*": ["packages/*/src"]
    },
    "types": ["node", "jest", "testing-library__jest-dom", "@emotion/jest"],
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*",
    "./scripts/**/*",
    ".prettierrc.js",
    "jest.config.js",
    "setupTests.ts"
  ]
}
