{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "rmc-vant": ["packages/components/src/index.tsx"],
      "@rmc-vant/*": ["packages/*/src"]
    },
    "types": ["node", "jest", "testing-library__jest-dom"]
  },
  "include": [
    "packages/**/*",
    "docs",
    "./scripts/**/*",
    ".prettierrc.js",
    "jest.config.js",
    "setupTests.ts"
  ],
  "exclude": ["node_modules"]
}
